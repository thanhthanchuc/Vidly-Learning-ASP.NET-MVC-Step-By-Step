@model System.Collections.Generic.List<Vidly.Models.Movie>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>
@Html.ActionLink("New Movie", "New", "Movie", new {@class="btn btn-danger"})
<br/>
@if (@Model.Count == 0)
{
    <text>We don't have any movie</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in @Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new {id = movie.Id}, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
        </tbody>
    </table>
}
