@model Vidly.ViewModels.CustomerFormViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (@Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix errors below!")
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.BirthDay)
        @Html.TextBoxFor(c => c.Customer.BirthDay, "{0:d MM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Customer.BirthDay)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(@Model.MembershipTypes, "Id", "Name"), "Select Membersipt Type",new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Customer.MembershipTypeId)
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(m=>m.Customer.IsSuprierToNewLetter) Suppier to new Letter?
    </div>
    @Html.HiddenFor(c=>c.Customer.Id)
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-primary">Save</button>
}
